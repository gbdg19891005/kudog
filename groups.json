{
  // ==============================
  // 分组规则（rules）
  // key = 分组名称
  // value = 关键字数组，频道名包含任意关键字就会归到该分组
  // ==============================
  "rules": {
    "CCTV": ["CCTV"],                        // 中央电视台
    "卫视": ["卫视", "衛視"],                 // 各大卫视
    "新闻": ["新聞", "新闻", "NEWS"],         // 新闻频道
    "综艺": ["綜藝", "综艺"],                 // 综艺娱乐
    "体育": ["體育", "体育", "SPORT"],        // 体育赛事
    "电影": ["電影", "电影", "MOVIE", "CINEMA"], // 电影频道
    "少儿": ["少儿", "兒童", "KIDS", "CARTOON", "動漫", "动画"], // 少儿/动漫
    "财经": ["財經", "财经", "FINANCE", "BUSINESS", "ECONOMY"], // 财经/商业
    "购物": ["購物", "购物", "SHOPPING"],     // 购物频道
    "音乐": ["音樂", "音乐", "MUSIC", "MTV"], // 音乐频道
    "纪录片": ["紀錄片", "纪录片", "DOCUMENTARY"], // 纪录片
    "国际台": ["国际", "國際", "WORLD", "INTL"], // 国际台
    "教育": ["教育", "EDU", "LEARN"],         // 教育频道
    "地方台": ["地方", "XX台", "都市", "CITY", "省台"] // 地方台（可按需扩展）
  },

  // ==============================
  // 自定义频道（custom_channels）
  // 这些频道会被置顶显示
  // 每个对象包含：
  //   name  = 频道名称
  //   logo  = 频道图标 URL
  //   group = 分组名称（可自定义）
  //   url   = 播放地址（m3u8/mp4/直播流）
  // ==============================
  "custom_channels": [
    {
      "name": "kudog提供",
      "logo": "https://example.com/logo.png",
      "group": "我的收藏",
      "url": "https://example.com/test.m3u8"
    },
    {
      "name": "家庭视频",
      "logo": "https://example.com/family.png",
      "group": "家庭专用",
      "url": "https://example.com/family.mp4"
    },
    {
      "name": "演示频道",
      "logo": "https://example.com/demo.png",
      "group": "测试频道",
      "url": "https://example.com/demo.m3u8"
    }
  ]
}
